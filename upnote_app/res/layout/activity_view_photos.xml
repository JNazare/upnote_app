<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".ViewPhotos" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="320dp"
            android:layout_height="86dp"
            android:paddingBottom="@dimen/ten"
            android:paddingTop="@dimen/ttt"
            android:src="@drawable/upnote_logo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@color/beige"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="@dimen/thirty" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_weight="1.13"
            android:background="@color/beige"
            android:gravity="center"
            android:paddingLeft="@dimen/ten"
            android:paddingRight="@dimen/ten" >

            <Button
                android:id="@+id/backpicbutton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/back"
                android:text=""
                android:textColor="@color/beige" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="228dp"
                android:layout_height="201dp"
                android:layout_weight="0.96"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten" />

            <Button
                android:id="@+id/fwdpicbutton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.07"
                android:background="@null"
                android:drawableLeft="@drawable/fwd"
                android:text=""
                android:textColor="@color/beige" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2"
        android:background="@color/beige"
        android:orientation="vertical"
        android:paddingTop="@dimen/med" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.98"
            android:gravity="center|top" >

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/brown"
                android:textColorLink="@color/brown"
                android:textSize="@dimen/twentyf"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>